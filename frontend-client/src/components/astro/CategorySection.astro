---
import type { Category } from "@/types";
import ProductCard from "@/components/astro/ProductCard.astro";

interface Props {
    category: Category;
}

const { category } = Astro.props;
---

<section id={`category-${category.id}`} class="py-8 scroll-mt-32">
    <h3 class="font-serif text-2xl font-bold text-gray-900 mb-6 px-4 md:px-0">
        {category.name}
    </h3>

    <div class="grid grid-cols-2 lg:grid-cols-3 gap-3 md:gap-6 px-4 md:px-0">
        {category.products.map((product) => <ProductCard product={product} />)}
    </div>
</section>
